{
    "compilerOptions": {
        "jsx": "react",
        "target": "es2015",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        "strict": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,

        "inlineSources": true,
        "sourceMap": true,

        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,

        "newLine": "lf",

        "noEmitOnError": true,
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".git"
    ]
}
